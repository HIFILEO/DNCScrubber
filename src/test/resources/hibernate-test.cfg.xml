<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:file:./dncScrubberDB-test;DATABASE_TO_UPPER=false;INIT=runscript from 'classpath:dncScrubberTablesTest.sql'</property>

        <property name="connection.username">root</property>

        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">5</property>

        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
<!--        <property name="format_sql">true</property>-->
<!--        <property name="use_sql_comments">true</property>-->

        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>

        <!-- You use a script to generate tables, keep this to update. Must delete DB to update table -->
        <!-- For types - https://www.baeldung.com/spring-boot-data-sql-and-schema-sql       -->
        <!-- Note - use create if you want to test and drop the tables every time. Use update to make sure
         you are on the same page as the application so the tables are created in an order that's readable in the
         database.-->
        <property name="hbm2ddl.auto">update</property>

        <property name="hibernate.hbm2ddl.import_files">dncScrubberTables.sql</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!--Pretty Print SQL-->
        <property name="hibernate.format_sql">true</property>

        <!-- dbcp connection pool configuration -->
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        <mapping class="com.LEO.DNCScrubber.Scrubber.gateway.model.ColdRvmLeadDao"/>
        <mapping class="com.LEO.DNCScrubber.Scrubber.gateway.model.PersonDao" />
        <mapping class="com.LEO.DNCScrubber.Scrubber.gateway.model.PropertyDao" />
    </session-factory>
</hibernate-configuration>